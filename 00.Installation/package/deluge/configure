{
  "file": 1, 
  "format": 1
}{
  "info_sent": 0.0, 
  "lsd": false, 
  "max_download_speed": -1.0, 
  "send_info": false, 
  "natpmp": true, 
  "move_completed_path": "$iHome/deluge/completed", 
  "peer_tos": "0x00", 
  "enc_in_policy": 1, 
  "queue_new_to_top": false, 
  "ignore_limits_on_local_network": true, 
  "rate_limit_ip_overhead": true, 
  "daemon_port": $iPort, 
  "torrentfiles_location": "$iHome/deluge/torrent", 
