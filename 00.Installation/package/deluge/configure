  "remove_seed_at_ratio": false, 
  "autoadd_location": "$iHome/deluge/watch", 
  "max_upload_slots_global": -1, 
  "seed_time_limit": -1, 
  "cache_size": 32768, 
  "share_ratio_limit": -1.0, 
  "random_port": true, 
  "listen_interface": ""
}
